{
    "name": "@glen-84/stylelint-config",
    "version": "1.4.2",
    "description": "A shareable stylelint config for Sass projects.",
    "author": "Glen Ainscow",
    "main": "index.js",
    "files": [
        "index.js"
    ],
    "scripts": {
        "format": "prettier --write \"**/*.js\""
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.js": "prettier --check"
    },
    "devDependencies": {
        "@glen-84/prettier-config": "^2.1.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "simple-git-hooks": "^2.4.1"
    },
    "peerDependencies": {
        "stylelint": "^13.12.0",
        "stylelint-scss": "^3.14.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glen-84/stylelint-config.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "license": "MIT",
    "prettier": "@glen-84/prettier-config"
}
