{
  "name": "@glen-84/stylelint-config",
  "version": "1.0.0",
  "description": "A shareable stylelint config for Sass projects.",
  "author": "Glen Ainscow",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@glen-84/prettier-config": "^1.0.0",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "peerDependencies": {
    "stylelint-scss": "^3.13.0",
    "stylelint": "^12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glen-84/stylelint-config.git"
  },
  "license": "MIT",
  "prettier": "@glen-84/prettier-config"
}
