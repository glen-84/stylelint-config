{
  "name": "@glen-84/stylelint-config",
  "version": "1.1.0",
  "description": "A shareable stylelint config for Sass projects.",
  "author": "Glen Ainscow",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "prettier --check"
  },
  "devDependencies": {
    "@glen-84/prettier-config": "^2.1.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1"
  },
  "peerDependencies": {
    "stylelint-scss": "^3.14.2",
    "stylelint": "^13.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glen-84/stylelint-config.git"
  },
  "license": "MIT",
  "prettier": "@glen-84/prettier-config"
}
